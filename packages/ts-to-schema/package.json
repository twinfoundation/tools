{
	"name": "@twin.org/ts-to-schema",
	"version": "0.0.1-next.14",
	"description": "Tool to convert TypeScript definitions to JSON schemas",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/tools.git",
		"directory": "packages/ts-to-schema"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "tsc",
		"build:watch": "tsc-watch --onSuccess \"npm run bundle:esm\"",
		"merge-locales": "merge-locales",
		"test": "vitest --run --config ./vitest.config.ts --no-cache",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts --no-cache",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs": "npm run docs:clean && npm run docs:generate",
		"dist": "npm run clean && npm run build && npm run merge-locales && npm run test && npm run bundle && npm run docs",
		"prepare": "ts-patch install -s"
	},
	"dependencies": {
		"@twin.org/cli-core": "next",
		"@twin.org/core": "next",
		"@twin.org/nameof": "0.0.1-next.14",
		"commander": "12.1.0",
		"glob": "11.0.0",
		"jsonschema": "1.4.1",
		"ts-json-schema-generator": "2.4.0-next.1"
	},
	"devDependencies": {
		"@twin.org/merge-locales": "0.0.1-next.14",
		"@twin.org/nameof-transformer": "0.0.1-next.14",
		"@twin.org/nameof-vitest-plugin": "0.0.1-next.14",
		"@types/node": "22.9.1",
		"@vitest/coverage-v8": "2.1.5",
		"copyfiles": "2.4.1",
		"rimraf": "6.0.1",
		"rollup": "4.27.3",
		"ts-patch": "3.2.1",
		"tsc-watch": "6.2.1",
		"typedoc": "0.26.11",
		"typedoc-plugin-markdown": "4.2.10",
		"typescript": "5.6.3",
		"vitest": "2.1.5"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs",
			"types": "./dist/types/index.d.ts"
		}
	},
	"files": [
		"bin",
		"dist/cjs",
		"dist/esm",
		"dist/locales",
		"dist/types",
		"locales",
		"docs"
	],
	"bin": {
		"ts-to-schema": "bin/index.js"
	}
}
