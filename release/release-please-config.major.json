{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"description": "Auto-Generated Release Please configuration for major",
	"pull-request-title-pattern": "chore: major release prepared",
	"pull-request-header": "chore: major release prepared",
	"pull-request-footer": "This PR was generated by the prepare-release GHA",
	"release-type": "node",
	"versioning": "always-bump-major",
	"prerelease": false,
	"prerelease-type": "",
	"separate-pull-requests": false,
	"packages": {
		"packages/nameof-transformer": {
			"package-name": "nameof-transformer",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/nameof-vitest-plugin": {
			"package-name": "nameof-vitest-plugin",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/nameof": {
			"package-name": "nameof",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"apps/merge-locales": {
			"package-name": "merge-locales",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/cli.ts", "tests/cli.spec.ts", "src/index.ts"]
		},
		"apps/ts-to-openapi": {
			"package-name": "ts-to-openapi",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/cli.ts", "tests/cli.spec.ts", "src/index.ts"]
		},
		"apps/ts-to-schema": {
			"package-name": "ts-to-schema",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/cli.ts", "tests/cli.spec.ts", "src/index.ts"]
		}
	},
	"plugins": [
		"node-workspace",
		{
			"type": "linked-versions",
			"groupName": "repo",
			"components": [
				"nameof-transformer",
				"nameof-vitest-plugin",
				"nameof",
				"merge-locales",
				"ts-to-openapi",
				"ts-to-schema"
			]
		}
	]
}
